<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<display-name>mvcproject02</display-name>

	<!--==================== conservlet ====================-->
	<!-- 서블릿 객체 생성 준비 -->
	<servlet>
		<servlet-name>conservlet</servlet-name>
		<servlet-class>com.controller.ConServlet</servlet-class>
	</servlet>
	
	<!-- 서블릿 실행 조건 설정 -->
	<servlet-mapping>
		<servlet-name>conservlet</servlet-name>
		<url-pattern>/conservlet</url-pattern>
	</servlet-mapping>
	<!--==================== conservlet ====================-->
	
	<!--==================== myController ====================-->
	<servlet>
		<servlet-name>myController</servlet-name>
		<servlet-class>com.servlet.ControllerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>myController</servlet-name>
		<url-pattern>/ControllerServlet</url-pattern>
	</servlet-mapping>
	<!--==================== myController ====================-->
	
	<!--==================== HelloServlet ====================-->
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.servlet.ConServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<!--==================== HelloServlet ====================-->
	
	<!--==================== now ====================-->
	<servlet>
		<servlet-name>now</servlet-name>
		<servlet-class>com.servlet.NowServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>now</servlet-name>
		<url-pattern>/NowPage</url-pattern>
	</servlet-mapping>
	<!--==================== now ====================-->


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>
</web-app>